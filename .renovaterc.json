{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "constraints": {
    "python": "==3.12"
  },
  "automergeType": "pr",
  "automergeStrategy": "merge-commit",
  "binarySource":"hermit",
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "commitMessageTopic": "ss-pybind11",
      "description": "Update template with copier when a new version is released",
      "matchDepTypes": [
        "copier-template"
      ],
      "postUpgradeTasks": {
        "commands": [
          "git stash",
          "pip install copier==9.4.1",
          "copier update --defaults --vcs-ref {{{newVersion}}}"
        ]
      },
      "semanticCommitScope": "copier-template"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "git-tags",
      "depNameTemplate": "https://github.com/serious-scaffold/ss-pybind11.git",
      "depTypeTemplate": "copier-template",
      "description": "Match template version specified in .copier-answers.yml",
      "fileMatch": [
        "^\\.copier-answers\\.yml$"
      ],
      "matchStrings": [
        "_commit: (?<currentValue>.*?)\n"
      ],
      "versioningTemplate": "semver"
    }
  ]
}
